{% extends 'knp_menu.html.twig' %}

{% block root %}
    {% for parentItem in item.children %}
    	{% if( parentItem.displayed ) %}
	        <li class="nav-item ">
	            <a class="nav-link"
	                data-toggle="collapse" aria-expanded="false" data-target="#submenu-cms-{{ loop.index }}" aria-controls="submenu-cms-{{ loop.index }}"
	                href="{{ parentItem.uri }}"
	             >
	                {# <i class="{{ parentItem.attributes.iconClass }}"></i> #}
	                <span>{{ parentItem.name }}</span>
	            {% if(parentItem.hasChildren) %}
	                <!--  <span class="menu-arrow arrow_carrot-right"></span> -->
	            {% endif %}
	            </a>
	            {% if(parentItem.hasChildren) %}
	                <div id="submenu-cms-{{ loop.index }}" class="collapse submenu" style="">
	                    <ul class="nav flex-column">
	                        {% for childItem in parentItem.children %}
	                            {% if( childItem.displayed ) %}
	                                <li class="nav-item"><a class="nav-link" href="{{ childItem.uri }}">{{ childItem.name }}</a></li>
	                            {% endif %}
	                        {% endfor %}
	                    </ul>
	                </div>
	            {% endif %}
	        </li>
	    {% endif %}
    {% endfor %}
{% endblock %}
