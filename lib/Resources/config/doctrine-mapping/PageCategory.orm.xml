<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <mapped-superclass name="VS\CmsBundle\Model\PageCategory">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        
        <!-- This not needed i think. The relation should defined in the owned site only but i'm not sure.
        		Now it is defined on Page model only.
        
        <many-to-many field="pages" name="page_id" target-entity="VS\CmsBundle\Model\PageInterface" mapped-by="categories">
        	<cascade>
                <cascade-all/>
            </cascade>
            <join-table name="VSCMS_Pages_Categories">
                <join-columns>
                    <join-column name="category_id" referenced-column-name="id" on-delete="CASCADE" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="page_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
      	-->
      	
      	<one-to-many field="relations" target-entity="VS\CmsBundle\Model\PageCategoryRelationInterface" mapped-by="category" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
        
        <many-to-one field="taxon" name="taxon_id" target-entity="VS\ApplicationBundle\Model\Interfaces\TaxonInterface" inversed-by="children" />
        
    </mapped-superclass>
</doctrine-mapping>
