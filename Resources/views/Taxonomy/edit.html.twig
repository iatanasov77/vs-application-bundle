{% extends "layout.html.twig" %}

{% block title %}{{ parent() }} :: Edit Taxonomy{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> Edit Taxonomy{% endblock %}

{% block content %}
    <div class="container-fluid  dashboard-content">
    	<!-- ============================================================== -->
        <!-- pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">{% if( item.id ) %}Taxonomy Edit: {{ item.name }}{% else %}Create New Taxonomy{% endif %}</h2>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                    	<nav aria-label="breadcrumb">
                            {{ knp_menu_render( 'breadcrumbs', {'template': 'menu/breadcrumb.html.twig'} ) }}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- ============================================================== -->
        <!-- end pageheader -->
        <!-- ============================================================== -->
        
    	<div class="row">
            <!-- ============================================================== -->
            <!-- basic tabs  -->
            <!-- ============================================================== -->
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                	<h5 class="card-header">Taxonomy</h5>
                	<div class="card-body">
						{% if form_errors(form) is not empty %}
			                <div class="alert alert-block alert-danger fade in">
			                    <button type="button" class="close close-sm" data-dismiss="alert">
			                        <i class="icon-remove"></i>
			                    </button>
			                    <strong>Error!</strong> {{ form_errors(form) }}
			                </div>
			            {% endif %}
			            <section class="panel">
			                <div class="panel-body bio-graph-info">
			                	{{ form_start(form, { 'attr': {'class': 'form-horizontal '} }) }}
			                        {{ form_widget(form) }}
			                    {{ form_end(form, {'render_rest': false}) }}
			                </div>
			            </section>  
	        		</div>
				</div>
				{% if( item.id ) %}
    				<div class="card">
    	                <div class="card-header">
                            <div class="float-left" style="height:30px; padding-top:10px;">Taxonomy Taxons</div>
                            <div class="btn-group float-right">
                                <a class="btn btn-primary btnTaxonomyTaxon" title="Settings" href="javascript:void(0);" data-url="{{ path('app_taxonomy_taxon', {'taxonomyId': item.id}) }}">
                                    Create New Taxon
                                </a>&nbsp;
                            </div>
                        </div>
                        <div class="card-body" style="padding: 0;">
                            <!--  http://gtreetable.gilek.net/ -->
                            <table class="table gtreetable"
                                   id="tableTaxons"
                                   data-url="{{ url('vs_application_taxonomy_taxons', {'id': item.id}) }}"
                            >
                            </table>
                        </div>
    				</div>
				{% endif %}
			</div>
        </div>
    </div>   
{% endblock content %}

{% block modals %} 
    {% include 'modal/taxonomy_taxon_edit.html.twig' %}
{% endblock %}
    
{% block head_styles %}	
	{{ parent() }}
	{{ encore_entry_link_tags( 'js/taxonomy' ) }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    {{ encore_entry_script_tags( 'js/taxonomy' ) }}
{% endblock %}
