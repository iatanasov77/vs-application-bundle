{% extends "@VSApplication/layout.html.twig" %}

{% import "@VSApplication/Macros/alerts.html.twig" as alerts %}

{% set pageTitle = 'vs_cms.template.filemanager_upload_file_title' | trans( {},'VSCmsBundle' ) %}

{% block title %}{{ parent() }} :: {{ pageTitle}}{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> {{ pageTitle }}{% endblock %}

{% block content %}
	<div class="row">
        <!-- ============================================================== -->
        <!-- basic tabs  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
            	<div class="card-body">
            	
                    {% if not form.vars.valid %}
                        {% for error in form.vars.errors %}
                            {{ alerts.error( error.message ) }}
                        {%endfor%}
                    {% endif %}
                    
		            <div id="pageFormContainer">
                        {% include '@VSCms/Pages/ArtgrisFileManager/partial/upload_file_form.html.twig' %}
                    </div>
        		</div>
			</div>
		</div>
    </div>
{% endblock content %}

{% block head_styles %}
    {{ parent() }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/filemanager-file-upload' ) }}
{% endblock %}
