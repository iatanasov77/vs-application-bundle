<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
>

    <mapped-superclass name="VS\ApplicationBundle\Model\Taxonomy">
        <field name="name" column="name" type="string" length="255" nullable="false">
            <gedmo:translatable />
        </field>
        
        <field name="description" column="description" type="text">
            <gedmo:translatable />
        </field>
        
        <one-to-one field="rootTaxon" target-entity="VS\ApplicationBundle\Model\Interfaces\TaxonInterface" inversed-by="taxonomy">
            <join-column name="root_taxon_id" referenced-column-name="id" nullable="true" on-delete="CASCADE" />
        </one-to-one>
    </mapped-superclass>

</doctrine-mapping>
