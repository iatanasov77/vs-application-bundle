<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>

    <mapped-superclass name="VS\ApplicationBundle\Model\Settings">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="maintenanceMode" column="maintenanceMode" type="boolean" nullable="false"/>
        
        <many-to-one field="maintenancePage" target-entity="VS\ApplicationBundle\Model\Interfaces\PageInterface">
            <join-column name="maintenance_page_id " referenced-column-name="id" nullable="true" on-delete="CASCADE" />
        </many-to-one>
        
        <field name="language" type="string" nullable="true"/>
        
        <field name="theme" type="string" nullable="true"/>
        
        <many-to-one field="site" target-entity="VS\ApplicationBundle\Model\Interfaces\SiteSettingsInterface">
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-one>
    </mapped-superclass>
</doctrine-mapping>
