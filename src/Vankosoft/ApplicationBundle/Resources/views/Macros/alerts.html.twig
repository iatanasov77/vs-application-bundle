{% macro success(text) %}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  {{ text }}
  <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{% endmacro %}

