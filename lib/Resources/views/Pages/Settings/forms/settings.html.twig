{{ form_start(form, { 'action': path('vs_application_settings_handle', {'siteId': siteId}), 'attr': {'id': 'formSettings_' ~ siteId, 'class': 'form-horizontal '} }) }}
    {{ form_widget(form._token) }}
    
    {% if form_errors(form) is not empty %}
        <div class="alert alert-block alert-danger fade in">
            <button type="button" class="close close-sm" data-dismiss="alert">
                <i class="icon-remove"></i>
            </button>
            <strong>Error!</strong> {{ form_errors(form) }}
        </div>
    {% endif %}
    
    <label class="custom-control custom-checkbox">  
        <input type="checkbox" id="page_form_enabled" name="settings_form[maintenanceMode]" 
            class="custom-control-input form-check-input"
            {% if form.vars.value.maintenanceMode %}checked="checked"{% endif %}
        />
        <span class="custom-control-label">Maintenance Mode</span>
    </label>

    {% set comboDataSourceUrl  = path( 'vs_cms_pages_tree_combo_with_leafs', {'taxonomyId': pageCategoriesTaxonomyCode}) %}
    {% set comboTreePlaceholder = 'vs_org.form.page_placeholder' | trans %}
    {% set comboDataOptions    = "
    		url:'" ~ comboDataSourceUrl ~ "',
    		required: true,
    		multiple: true,
    		checkbox : true,
    		onlyLeafCheck: true,
    		prompt:'" ~ comboTreePlaceholder ~"',
    		onCheck: function( node, checked ) {
        		var cc = $(this).combotree( 'combo' );
        		$( cc ).combotree( 'hidePanel' );
        		$( cc ).combotree( 'setValue', checked?node.id:null );
        	},
    		onBeforeLoad: function( node ) {
    		    //showSpiner
    		},
    		onLoadSuccess: function( node ) {
    			//hideSpiner
    		}
    " %}
    <div class="form-group">
        {{ form_label(form.maintenancePage, null, {
            'label_attr': {'class': 'col-form-label'}
            }) 
        }}
        
        {{ form_widget(form.maintenancePage, {
            'attr': {
                'class': 'easyui-combotree',
                'data-options': comboDataOptions,
                'data-value': siteId,
            }
        }) }}
    </div>

{{ form_end(form, {'render_rest': false}) }}
